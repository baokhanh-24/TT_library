@model Library.Models.admin;

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2>Login</h2>
    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label asp-for="admin_Name" class="form-label">Username</label>
            <input asp-for="admin_Name" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="admin_Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="delete_Flag" type="checkbox" class="form-check-input" />
            <label asp-for="delete_Flag" class="form-check-label">Remember me</label>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <div class="text-danger mt-2">
                @ViewData["ValidateMessage"]
            </div>
        }
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
